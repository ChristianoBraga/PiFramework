   = smtSimplify(GSC) === SC .
  eq smtSimplify**(SC === GSC)
   = smtSimplify(GSC) === SC .
  eq smtSimplify**(GSC =/== SC)
   = smtSimplify(GSC) =/== SC .
  eq smtSimplify**(SC =/== GSC)
   = smtSimplify(GSC) =/== SC .

  eq smtSimplify**(SAT === SAT')
   = smtSimplify(SAT) === smtSimplify(SAT') .
  eq smtSimplify**(SAT =/== SAT')
   = smtSimplify(SAT) =/== smtSimplify(SAT') .
  eq smtSimplify**(SAT < SAT')
   = smtSimplify(SAT) < smtSimplify(SAT') .
  eq smtSimplify**(SAT > SAT')
   = smtSimplify(SAT) > smtSimplify(SAT') .
  eq smtSimplify**(SAT <= SAT')
   = smtSimplify(SAT) <= smtSimplify(SAT') .
  eq smtSimplify**(SAT >= SAT')
   = smtSimplify(SAT) >= smtSimplify(SAT') .
  eq smtSimplify**(SC)
   = smtSimplify***(SC) [owise] .


