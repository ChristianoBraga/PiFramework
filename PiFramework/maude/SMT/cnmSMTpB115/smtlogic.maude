  eq term2cExpr('_xor_[T1,T2]) = term2cExpr(T1) xor term2cExpr(T2) .
  eq term2cExpr('_or_[T1,T2]) = term2cExpr(T1) or term2cExpr(T2) .
  eq term2cExpr('_implies_[T1,T2]) = term2cExpr(T1) implies term2cExpr(T2) .
