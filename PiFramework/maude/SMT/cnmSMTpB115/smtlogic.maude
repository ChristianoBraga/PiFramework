   = smtSimplify(SAT) < ST .
  eq smtSimplify***(SAT > ST)
   = smtSimplify(SAT) > ST .
  eq smtSimplify***(SAT <= ST)
   = smtSimplify(SAT) <= ST .
  eq smtSimplify***(SAT >= ST)
   = smtSimplify(SAT) >= ST .
